const { project } = Astro.props;
---

<Layout title={`${project.title} - Portfolio`}>
  <!-- Hero Section -->
  <section class="pt-32 pb-12 relative overflow-hidden">
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute top-0 right-0 w-96 h-96 bg-cyan-500/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 left-0 w-96 h-96 bg-purple-500/10 rounded-full blur-3xl"></div>
    </div>

    <div class="container mx-auto px-6 z-10 relative">
      <!-- Breadcrumb -->
      <nav class="mb-8">
        <ul class="flex items-center gap-2 text-gray-400">
          <li><a href="/" class="hover:text-cyan-400 transition-colors">Inicio</a></li>
          <li>/</li>
          <li><a href="/proyectos" class="hover:text-cyan-400 transition-colors">Proyectos</a></li>
          <li>/</li>
          <li class="text-cyan-400">{project.title}</li>
        </ul>
      </nav>

      <!-- Title and Category -->
      <div class="mb-8">
        <span class="inline-block px-4 py-2 bg-cyan-500/20 text-cyan-400 rounded-full text-sm font-semibold mb-4">
          {project.category}
        </span>
        <h1 class="text-5xl md:text-7xl font-bold mb-6 bg-linear-to-r from-cyan-400 to-purple-500 bg-clip-text text-transparent">
          {project.title}
        </h1>
        <p class="text-xl text-gray-400 max-w-3xl">
          {project.description}
        </p>
      </div>

      <!-- Action Buttons -->
      <div class="flex gap-4 flex-wrap">
        <a 
          href={project.demoUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="px-6 py-3 bg-linear-to-r from-cyan-500 to-purple-600 rounded-full text-white font-semibold hover:shadow-lg hover:shadow-cyan-500/50 transition-all hover:scale-105 flex items-center gap-2"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
          </svg>
          Ver Demo
        </a>
        <a 
          href={project.githubUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="px-6 py-3 border-2 border-cyan-500 rounded-full text-cyan-400 font-semibold hover:bg-cyan-500/10 transition-all hover:scale-105 flex items-center gap-2"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          Ver Código
        </a>
      </div>
    </div>
  </section>

  <!-- Main Image -->
  <section class="py-12">
    <div class="container mx-auto px-6">
      <div class="relative">
        <div class="absolute inset-0 bg-linear-to-r from-cyan-500 to-purple-600 rounded-2xl blur-xl opacity-30"></div>
        <img 
          src={project.image} 
          alt={project.title}
          class="relative w-full rounded-2xl shadow-2xl"
        />
      </div>
    </div>
  </section>

  <!-- Project Details -->
  <section class="py-12">
    <div class="container mx-auto px-6">
      <div class="grid lg:grid-cols-3 gap-12">
        <!-- Main Content -->
        <div class="lg:col-span-2 space-y-12">
          <!-- Description -->
          <div>
            <h2 class="text-3xl font-bold text-white mb-4 flex items-center gap-3">
              <span class="w-2 h-8 bg-linear-to-b from-cyan-400 to-purple-500 rounded-full"></span>
              Descripción del Proyecto
            </h2>
            <p class="text-gray-400 text-lg leading-relaxed">
              {project.longDescription}
            </p>
          </div>

          <!-- Features -->
          <div>
            <h2 class="text-3xl font-bold text-white mb-6 flex items-center gap-3">
              <span class="w-2 h-8 bg-linear-to-b from-cyan-400 to-purple-500 rounded-full"></span>
              Características Principales
            </h2>
            <div class="grid md:grid-cols-2 gap-4">
              {project.features.map(feature => (
                <div class="flex items-start gap-3 bg-gray-900/50 backdrop-blur-sm p-4 rounded-lg border border-cyan-500/20">
                  <svg class="w-6 h-6 text-cyan-400 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span class="text-gray-300">{feature}</span>
                </div>
              ))}
            </div>
          </div>

          <!-- Challenges -->
          <div>
            <h2 class="text-3xl font-bold text-white mb-6 flex items-center gap-3">
              <span class="w-2 h-8 bg-linear-to-b from-cyan-400 to-purple-500 rounded-full"></span>
              Desafíos Técnicos
            </h2>
            <div class="space-y-4">
              {project.challenges.map(challenge => (
                <div class="bg-gray-900/50 backdrop-blur-sm p-6 rounded-lg border border-purple-500/20">
                  <p class="text-gray-300 flex items-start gap-3">
                    <svg class="w-6 h-6 text-purple-400 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                    </svg>
                    {challenge}
                  </p>
                </div>
              ))}
            </div>
          </div>

          <!-- Gallery -->
          <div>
            <h2 class="text-3xl font-bold text-white mb-6 flex items-center gap-3">
              <span class="w-2 h-8 bg-linear-to-b from-cyan-400 to-purple-500 rounded-full"></span>
              Galería
            </h2>
            <div class="grid md:grid-cols-2 gap-6">
              {project.gallery.map((image, index) => (
                <div class="relative overflow-hidden rounded-xl group">
                  <img 
                    src={image} 
                    alt={`${project.title} screenshot ${index + 1}`}
                    class="w-full h-64 object-cover transition-transform duration-500 group-hover:scale-110"
                  />
                  <div class="absolute inset-0 bg-linear-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
                </div>
              ))}
            </div>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="space-y-6">
          <!-- Technologies -->
          <div class="bg-gray-900/50 backdrop-blur-sm p-6 rounded-xl border border-cyan-500/20 sticky top-24">
            <h3 class="text-2xl font-bold text-white mb-4 flex items-center gap-2">
              <svg class="w-6 h-6 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
              </svg>
              Tecnologías
            </h3>
            <div class="flex flex-wrap gap-2">
              {project.technologies.map(tech => (
                <span class="px-4 py-2 bg-cyan-500/10 text-cyan-400 rounded-lg text-sm font-semibold border border-cyan-500/30">
                  {tech}
                </span>
              ))}
            </div>

            <div class="mt-6 pt-6 border-t border-gray-800">
              <h4 class="text-lg font-semibold text-white mb-3">Categoría</h4>
              <span class="inline-block px-4 py-2 bg-purple-500/20 text-purple-400 rounded-lg font-semibold">
                {project.category}
              </span>
            </div>

            <div class="mt-6 space-y-3">
              <a 
                href={project.demoUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="block w-full px-4 py-3 bg-cyan-500/20 text-cyan-400 rounded-lg font-semibold text-center hover:bg-cyan-500/30 transition-colors"
              >
                Visitar Sitio
              </a>
              <a 
                href={project.githubUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="block w-full px-4 py-3 bg-gray-800 text-gray-300 rounded-lg font-semibold text-center hover:bg-gray-700 transition-colors"
              >
                Ver en GitHub
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Navigation to other projects -->
  <section class="py-12">
    <div class="container mx-auto px-6">
      <div class="bg-linear-to-r from-cyan-500/20 to-purple-600/20 border border-cyan-500/30 rounded-2xl p-8 text-center">
        <h3 class="text-2xl font-bold text-white mb-4">
          ¿Quieres ver más proyectos?
        </h3>
        <a 
          href="/proyectos"
          class="inline-block px-8 py-3 bg-linear-to-r from-cyan-500 to-purple-600 rounded-full text-white font-semibold hover:shadow-lg hover:shadow-cyan-500/50 transition-all hover:scale-105"
        >
          Ver Todos los Proyectos
        </a>
      </div>
    </div>
  </section>
</Layout>
