---
import Layout from '../../layouts/Layout.astro';

const projects = [
  {
    id: 1,
    title: 'E-Commerce Platform',
    description: 'Plataforma de comercio electrónico moderna con carrito de compras, pagos integrados y panel de administración.',
    image: 'https://placehold.co/600x400/1a1a1a/06b6d4?text=E-Commerce',
    technologies: ['React', 'Node.js', 'MongoDB', 'Stripe'],
    category: 'Full Stack',
    featured: true
  },
  {
    id: 2,
    title: 'Dashboard Analytics',
    description: 'Dashboard interactivo para visualización de datos con gráficos en tiempo real y filtros avanzados.',
    image: 'https://placehold.co/600x400/1a1a1a/a855f7?text=Dashboard',
    technologies: ['Vue.js', 'D3.js', 'Tailwind', 'Firebase'],
    category: 'Front-End',
    featured: true
  },
  {
    id: 3,
    title: 'Social Media App',
    description: 'Red social con funcionalidades de posts, likes, comentarios y mensajería en tiempo real.',
    image: 'https://placehold.co/600x400/1a1a1a/06b6d4?text=Social+Media',
    technologies: ['Next.js', 'Socket.io', 'PostgreSQL', 'Redis'],
    category: 'Full Stack',
    featured: false
  },
  {
    id: 4,
    title: 'Weather Forecast App',
    description: 'Aplicación del clima con pronósticos detallados, mapas interactivos y alertas meteorológicas.',
    image: 'https://placehold.co/600x400/1a1a1a/a855f7?text=Weather+App',
    technologies: ['React', 'OpenWeather API', 'Mapbox', 'CSS Modules'],
    category: 'Front-End',
    featured: false
  },
  {
    id: 5,
    title: 'Task Management System',
    description: 'Sistema de gestión de tareas con tableros Kanban, asignación de equipos y seguimiento de progreso.',
    image: 'https://placehold.co/600x400/1a1a1a/06b6d4?text=Task+Manager',
    technologies: ['Svelte', 'Supabase', 'Tailwind', 'TypeScript'],
    category: 'Full Stack',
    featured: true
  },
  {
    id: 6,
    title: 'Portfolio Generator',
    description: 'Herramienta para crear portfolios personalizados con plantillas prediseñadas y editor visual.',
    image: 'https://placehold.co/600x400/1a1a1a/a855f7?text=Portfolio+Gen',
    technologies: ['Astro', 'React', 'Tailwind', 'MDX'],
    category: 'Front-End',
    featured: false
  }
];
---

<Layout title="Proyectos - Portfolio">
  <!-- Hero Section -->
  <section class="pt-32 pb-16 relative overflow-hidden">
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute top-0 right-1/4 w-96 h-96 bg-cyan-500/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 left-1/4 w-96 h-96 bg-purple-500/10 rounded-full blur-3xl"></div>
    </div>

    <div class="container mx-auto px-6 z-10 relative">
      <div class="text-center mb-12">
        <h1 class="text-5xl md:text-7xl font-bold mb-6 bg-linear-to-r from-cyan-400 to-purple-500 bg-clip-text text-transparent">
          Mis Proyectos
        </h1>
        <p class="text-xl text-gray-400 max-w-2xl mx-auto">
          Explora una selección de mis trabajos más recientes y destacados
        </p>
      </div>
    </div>
  </section>

  <!-- Featured Projects -->
  <section class="py-12">
    <div class="container mx-auto px-6">
      <h2 class="text-3xl font-bold mb-8 text-white flex items-center gap-3">
        <span class="w-2 h-8 bg-linear-to-b from-cyan-400 to-purple-500 rounded-full"></span>
        Proyectos Destacados
      </h2>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {projects.filter(p => p.featured).map(project => (
          <a 
            href={`/proyectos/${project.id}`}
            class="group bg-gray-900/50 backdrop-blur-sm rounded-xl overflow-hidden border border-cyan-500/20 card-hover"
          >
            <div class="relative overflow-hidden">
              <img 
                src={project.image} 
                alt={project.title}
                class="w-full h-64 object-cover transition-transform duration-500 group-hover:scale-110"
              />
              <div class="absolute top-4 right-4 px-3 py-1 bg-cyan-500 text-white text-sm font-semibold rounded-full">
                {project.category}
              </div>
            </div>
            
            <div class="p-6">
              <h3 class="text-2xl font-bold text-white mb-3 group-hover:text-cyan-400 transition-colors">
                {project.title}
              </h3>
              <p class="text-gray-400 mb-4 line-clamp-2">
                {project.description}
              </p>
              
              <div class="flex flex-wrap gap-2 mb-4">
                {project.technologies.map(tech => (
                  <span class="px-3 py-1 bg-cyan-500/10 text-cyan-400 rounded-full text-sm">
                    {tech}
                  </span>
                ))}
              </div>

              <div class="flex items-center text-cyan-400 font-semibold group-hover:gap-3 gap-2 transition-all">
                Ver proyecto
                <svg class="w-5 h-5 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- All Projects -->
  <section class="py-12">
    <div class="container mx-auto px-6">
      <h2 class="text-3xl font-bold mb-8 text-white flex items-center gap-3">
        <span class="w-2 h-8 bg-linear-to-b from-cyan-400 to-purple-500 rounded-full"></span>
        Todos los Proyectos
      </h2>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {projects.map(project => (
          <a 
            href={`/proyectos/${project.id}`}
            class="group bg-gray-900/50 backdrop-blur-sm rounded-xl overflow-hidden border border-cyan-500/20 card-hover"
          >
            <div class="relative overflow-hidden">
              <img 
                src={project.image} 
                alt={project.title}
                class="w-full h-64 object-cover transition-transform duration-500 group-hover:scale-110"
              />
              <div class="absolute top-4 right-4 px-3 py-1 bg-purple-600 text-white text-sm font-semibold rounded-full">
                {project.category}
              </div>
            </div>
            
            <div class="p-6">
              <h3 class="text-2xl font-bold text-white mb-3 group-hover:text-cyan-400 transition-colors">
                {project.title}
              </h3>
              <p class="text-gray-400 mb-4">
                {project.description}
              </p>
              
              <div class="flex flex-wrap gap-2 mb-4">
                {project.technologies.map(tech => (
                  <span class="px-3 py-1 bg-purple-500/10 text-purple-400 rounded-full text-sm">
                    {tech}
                  </span>
                ))}
              </div>

              <div class="flex items-center text-cyan-400 font-semibold group-hover:gap-3 gap-2 transition-all">
                Ver detalles
                <svg class="w-5 h-5 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20">
    <div class="container mx-auto px-6">
      <div class="bg-linear-to-r from-cyan-500/20 to-purple-600/20 border border-cyan-500/30 rounded-2xl p-12 text-center relative overflow-hidden">
        <div class="absolute inset-0 bg-gray-900/50 backdrop-blur-sm"></div>
        <div class="relative z-10">
          <h2 class="text-4xl font-bold text-white mb-4">
            ¿Tienes un proyecto en mente?
          </h2>
          <p class="text-xl text-gray-400 mb-8">
            Trabajemos juntos para hacerlo realidad
          </p>
          <a 
            href="/#contact"
            class="inline-block px-8 py-4 bg-linear-to-r from-cyan-500 to-purple-600 rounded-full text-white font-semibold hover:shadow-lg hover:shadow-cyan-500/50 transition-all hover:scale-105"
          >
            Comenzar un Proyecto
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
